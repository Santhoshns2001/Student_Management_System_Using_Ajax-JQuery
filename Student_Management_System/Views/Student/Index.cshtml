

@{
    ViewData["Title"] = "Index";
}

<button class="btn btn-sm btn-primary m-2 " id="btnAddStudent">Add Student</button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>StudentId</th>
            <th>StudentName</th>
            <th>Gender</th>
            <th>Class</th>
            <th>RollNo</th>
            <th>DOB</th>
            <th>Address</th>
            <th>City</th>
            <th>PhoneNumber</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data">
    </tbody>
</table>

<div class="modal fade" id="StudentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="studentHeading">Add Student</h1>
                <button class="close text-danger" onclick="HideModalPopUp()" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group mt-4" id="studentId">
                        <input type="number" placeholder="Enter Id" class="form-control" id="StudentId" disabled="disabled" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" placeholder="Enter Name" class="form-control" id="StudentName" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" placeholder="Gender" class="form-control" id="Gender" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" placeholder="Class" class="form-control" id="Class" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="number" placeholder="RollNo" class="form-control" id="RollNo" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="number" placeholder="PhoneNumber" class="form-control" id="PhoneNumber" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="date" placeholder="DOB" class="form-control" id="DOB" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" placeholder="Address" class="form-control" id="Address" autocomplete="off" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" placeholder="City" class="form-control" id="City" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddStudent();" id="AddStudent">Save</button>
                <button class="btn btn-warning" onclick="UpdateStudent();" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" onclick="HideModalPopUp()" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/student.js"></script>
